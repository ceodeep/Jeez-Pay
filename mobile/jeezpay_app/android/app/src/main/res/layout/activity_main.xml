<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!-- SCREEN SWITCHER (Home / Card / Send / Hub) -->
    <ViewFlipper
        android:id="@+id/screenFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavCard">

        <!-- =========================
             HOME SCREEN (your current UI)
             ========================= -->
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- TOP BAR -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/text_primary"
                        android:textSize="26sp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
<!--                    <TextView-->
<!--                        android:id="@+id/tvLogout"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Logout"-->
<!--                        android:textColor="@color/paypal_blue"-->
<!--                        android:textSize="13sp"-->
<!--                        android:fontFamily="sans-serif-medium"-->
<!--                        android:includeFontPadding="false"-->
<!--                        android:padding="8dp"-->
<!--                        app:layout_constraintEnd_toStartOf="@id/profileCard"-->
<!--                        app:layout_constraintTop_toTopOf="parent"-->
<!--                        app:layout_constraintBottom_toBottomOf="parent"-->
<!--                        android:layout_marginEnd="6dp"/>-->


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profileCard"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/card_stroke_soft"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile"
                            android:padding="3dp"
                            android:background="@drawable/profile_ring_soft"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.JeezPay.Circle" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- BALANCE CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/balanceCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/card_stroke_soft"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Available Balance"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:includeFontPadding="false" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!-- Currency pill (NEW) -->
                            <LinearLayout
                                android:id="@+id/btnCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="34dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/currency_pill_bg"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <ImageView
                                    android:id="@+id/imgCurrency"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/logo_usdt"
                                    android:contentDescription="Currency"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.JeezPay.Circle"/>

                                <TextView
                                    android:id="@+id/tvCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="USDT"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false" />

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginStart="6dp"
                                    android:src="@drawable/ic_more"
                                    app:tint="@color/text_tertiary"
                                    android:contentDescription="Open currency picker" />
                            </LinearLayout>

                            <!-- Eye toggle -->
                            <ImageView
                                android:id="@+id/btnToggleBalance"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_eye"
                                app:tint="@color/text_tertiary"
                                android:contentDescription="Toggle balance visibility" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ 1,250.00"
                            android:textColor="@color/text_primary"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium"
                            android:includeFontPadding="false"
                            android:layout_marginTop="8dp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider_soft"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="14dp" />
                        <!-- My Wallets (Horizontal strip) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Wallets"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="sans-serif-medium"
                                android:includeFontPadding="false"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tvManageWallets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage"
                                android:textSize="12sp"
                                android:textColor="@color/paypal_blue"
                                android:includeFontPadding="false"/>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvWalletStrip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:paddingBottom="6dp"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"/>


                        <!-- STEP 2: REDOTPAY-LIKE ACTION GRID -->
                        <GridLayout
                            android:id="@+id/actionGrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="4"
                            android:rowCount="2"
                            android:useDefaultMargins="true">

                            <!-- Deposit -->
                            <LinearLayout
                                android:id="@+id/btnDeposit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_plus"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="Deposit"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Deposit"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- Send (keeps your existing ID) -->
                            <LinearLayout
                                android:id="@+id/btnSend"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_send"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="Send"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Send"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- Earn -->
                            <LinearLayout
                                android:id="@+id/btnEarn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_coin"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="Earn"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Recieve"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- P2P -->
                            <LinearLayout
                                android:id="@+id/btnP2P"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_people"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="P2P"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="P2P"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- Referral -->
                            <LinearLayout
                                android:id="@+id/btnReferral"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_user_plus"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="Referral"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Referral"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- Credit -->
                            <LinearLayout
                                android:id="@+id/btnCredit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_card"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="Credit"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Credit"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- Swap -->
                            <LinearLayout
                                android:id="@+id/btnSwap"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_swap"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="Swap"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Swap"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                            <!-- More -->
                            <LinearLayout
                                android:id="@+id/btnMore"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless">

                                <FrameLayout
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/quick_action_bg">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_more"
                                        app:tint="@color/paypal_blue"
                                        android:contentDescription="More"/>
                                </FrameLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="More"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="sans-serif-medium"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>

                        </GridLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <!-- RECENT TRANSACTIONS HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvSeeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See all"
                        android:textColor="@color/paypal_blue"
                        android:textSize="13sp"
                        android:includeFontPadding="false" />
                </LinearLayout>

                <!-- STEP 3: TRANSACTIONS LIST CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp"
                    app:strokeColor="@color/card_stroke_soft"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTransactions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:clipToPadding="false"
                            android:paddingBottom="6dp"
                            />

                        <!-- Keeps your existing ID for status updates -->
                        <TextView
                            android:id="@+id/actionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp"
                            android:paddingTop="8dp"
                            android:visibility="gone"
                            android:includeFontPadding="false"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





        <!-- =========================
             CARD SCREEN (placeholder)
             ========================= -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card"
                    android:textSize="22sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </ScrollView>

        <!-- =========================
             SEND SCREEN (placeholder)
             ========================= -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:textSize="22sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </ScrollView>

        <!-- =========================
             HUB SCREEN (placeholder)
             ========================= -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hub"
                    android:textSize="22sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </ScrollView>
        <!-- =====================
     SCREEN 4: PIN UNLOCK
     (Shown when token + pin already exist)
     ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter PIN"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Unlock your account"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/etUnlockPin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="4-digit PIN"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnlock"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:text="Unlock"
                android:textAllCaps="false"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/paypal_blue"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/btnUseAnotherAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Use another account"
                android:textColor="@color/paypal_blue"
                android:textSize="13sp"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </ViewFlipper>

    <!-- BOTTOM NAV (your custom stacked layout stays the same) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="34dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/card_stroke_soft"
        app:cardBackgroundColor="@color/card_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/customBottomNav"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- HOME (selected by default) -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bottom_nav_selected_pill"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/paypal_blue" />

                <TextView
                    android:id="@+id/textHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/paypal_blue"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- CARD -->
            <LinearLayout
                android:id="@+id/navCard"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iconCard"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_card"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/textCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Card"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_tertiary"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- SEND -->
            <LinearLayout
                android:id="@+id/navSend"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iconSend"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_send"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/textSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Send"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_tertiary"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <!-- HUB -->
            <LinearLayout
                android:id="@+id/navHub"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/iconHub"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_hub"
                    app:tint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/textHub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hub"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/text_tertiary"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:includeFontPadding="false" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>