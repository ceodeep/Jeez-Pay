<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke_soft"
    app:cardBackgroundColor="@color/card_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Left: Icon circle -->
        <FrameLayout
            android:id="@+id/txIconBg"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/tx_icon_bg"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <TextView
                android:id="@+id/txIconText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="↑"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/paypal_blue"
                android:includeFontPadding="false"/>
        </FrameLayout>

        <!-- Middle: Title + Desc -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- LOCKED ID -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREDIT"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

            <!-- LOCKED ID -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Admin top-up"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"/>

            <!-- LOCKED ID -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Feb 11, 2026 • 10:10 PM"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp"
                android:includeFontPadding="false"/>
        </LinearLayout>

        <!-- Right: Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- LOCKED ID -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 100.00"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tvAmountHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Completed"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
