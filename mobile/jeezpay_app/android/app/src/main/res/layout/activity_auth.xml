<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:padding="18dp">

    <ViewFlipper
        android:id="@+id/authFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- =====================
             SCREEN 1: PHONE
             ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to JeezPay"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Enter your phone number to continue"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/paypal_blue"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- =====================
             SCREEN 2: OTP
             ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnBackOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                android:textColor="@color/paypal_blue"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Verify OTP"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tvOtpHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Enter the code sent to your phone"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/etOtp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="OTP code"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:text="Verify"
                android:textAllCaps="false"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/paypal_blue"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- =====================
             SCREEN 3: PIN SET
             ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnBackPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                android:textColor="@color/paypal_blue"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Set PIN"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Create a 4-digit PIN for quick login"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/etPin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="4-digit PIN"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetPin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:text="Finish"
                android:textAllCaps="false"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/paypal_blue"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- =====================
             SCREEN 4: PIN UNLOCK  ✅ NEW
             ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter PIN"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Unlock your account"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/etUnlockPin"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/input_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:hint="4-digit PIN"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUnlock"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:text="Unlock"
                android:textAllCaps="false"
                android:enabled="false"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/paypal_blue"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/btnUseAnotherAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Use another account"
                android:textColor="@color/paypal_blue"
                android:textSize="13sp"
                android:includeFontPadding="false"/>
        </LinearLayout>

    </ViewFlipper>

</androidx.constraintlayout.widget.ConstraintLayout>
