<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="JeezPayTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Real primary (used by Material internally) -->
        <item name="colorPrimary">@color/paypal_blue</item>
        <item name="colorPrimaryVariant">@color/paypal_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Surface & background -->
        <item name="colorSurface">@color/card_white</item>
        <item name="android:colorBackground">@color/bg_main</item>
        <item name="android:windowBackground">@color/bg_main</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status / Nav bars -->
        <item name="android:statusBarColor">@color/bg_main</item>
        <item name="android:navigationBarColor">@color/bg_main</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Disable ugly default ripples -->
        <item name="colorControlHighlight">@color/ripple_soft</item>

    </style>



    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_selector</item>
        <item name="itemTextColor">@color/nav_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Rounded active indicator like the screenshot -->


    <style name="ShapeAppearance.JeezPay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
